<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="30dp">

            <ImageView
                android:id="@+id/img_serving"
                android:layout_width="174dp"
                android:layout_height="174dp"
                android:adjustViewBounds="true"
                android:padding="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/serving_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/serving_name"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/CoffeePercentBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:paddingTop="20dp" />

                <TextView
                    android:id="@+id/CoffeePercentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/coffeepercent"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/WaterPercentBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:paddingTop="15dp" />

                <TextView
                    android:id="@+id/WaterPercentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/waterpercent"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/MilkPercentBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:paddingTop="15dp" />

                <TextView
                    android:id="@+id/MilkPercentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/milkpercent"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/serving_labelDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/serving_labelDetail"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/serving_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/serving_detail"
            android:paddingTop="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

    </LinearLayout>
</ScrollView>