<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp">

            <ImageView
                android:id="@+id/img_serving"
                android:layout_width="174dp"
                android:layout_height="174dp"
                android:adjustViewBounds="true" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/CoffeePercentBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:paddingTop="45dp" />

            <TextView
                android:id="@+id/CoffeePercentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/coffeepercent" />

            <ProgressBar
                android:id="@+id/WaterPercentBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:paddingTop="15dp"/>

            <TextView
                android:id="@+id/WaterPercentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/waterpercent" />

            <ProgressBar
                android:id="@+id/MilkPercentBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:paddingTop="15dp"/>

            <TextView
                android:id="@+id/MilkPercentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/milkpercent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/serving_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/serving_detail" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>